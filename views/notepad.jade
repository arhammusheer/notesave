extends layout

block content 
  link(href="https://cdn.quilljs.com/1.3.6/quill.bubble.css", rel="stylesheet")
  div.container
    br
    br
    br
    div.row.justify-content-between
      h2= title
      div
        div#saved(hidden)
          <svg xmlns="http://www.w3.org/2000/svg" width="44" height="44" viewBox="0 0 24 24" fill="none" stroke="green" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-check-circle"><path d="M22 11.08V12a10 10 0 1 1-5.93-9.14"></path><polyline points="22 4 12 14.01 9 11.01"></polyline></svg>
        div.spinner-grow.text-primary#saving(hidden)
        div#notsaved(hidden)
          <svg xmlns="http://www.w3.org/2000/svg" width="44" height="44" viewBox="0 0 24 24" fill="none" stroke="red" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-x-circle"><circle cx="12" cy="12" r="10"></circle><line x1="15" y1="9" x2="9" y2="15"></line><line x1="9" y1="9" x2="15" y2="15"></line></svg>
    br
    div.row.justify-content-end
      button.btn.btn-primary.btn-sm.very-rounded#delete-button= "Delete"
    br
    div.row.justify-content-between
      div#editor.bg-primary.w-100.h-100.very-rounded.text-white.padded.shadow
  script(src="https://cdn.quilljs.com/1.3.6/quill.js")
  script(src='/javascripts/notepad.js')
